@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Anket Ekle - Anket Kazan</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&amp;display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/Contact-Details-icons.css">
    <link rel="stylesheet" href="/assets/css/Floating-Button.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md py-3">
        <div class="container">
            <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" href="/admin">Anket Ekle</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/surveylist">Anketler</a></li>
                </ul><a href="/logout"><button class="btn btn-primary" type="button">Çıkış Yap</button></a>
            </div>
        </div>
    </nav>
    <section class="py-4 py-xl-5">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <div class="card mb-5">
                        <div class="card-body p-sm-5">
                            <h2 class="text-center mb-4">Anket Ekle</h2>
                            <form id="form1" action="/AddSurvey" method="post">
                                <div class="mb-3"><input class="form-control" type="text" id="name-2" name="Survey_Name" placeholder="Anket İsmi"></div>
                                <div class="mb-3"><input class="form-control" type="text" id="name-1" name="Survey_sender" placeholder="Anketi Veren Kuruluş"></div>
                                <div><input class="form-control mb-3" type="number" max="100" value="1" name="Survey_balance" min="1"></div>
                                <div id="1" class="mb-3">
                                    <textarea class="form-control mb-3" id="question-1" name="Question_Text1" rows="6" placeholder="Soru-1"></textarea>
                                    <div>
                                        <div class="mb-3"><input class="form-control" type="text" id="questions-1_answer-1" name="Question1-Answer_One" placeholder="Cevap-1"></div>
                                        <div class="mb-3"><input class="form-control" type="text" id="questions-1_answer-2" name="Question1-Answer_Two" placeholder="Cevap-2"></div>
                                        <div class="mb-3"><input class="form-control" type="text" id="questions-1_answer-3" name="Question1-Answer_Three" placeholder="Cevap-3"></div>
                                        <div class="mb-3"><input class="form-control" type="text" id="questions-1_answer-4" name="Question1-Answer_Four" placeholder="Cevap-4"></div>
                                    </div>
                                </div>
                                <div><button class="btn btn-primary d-block w-100" type="submit">Gönder</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div><button id="add_button" class="float" style="border: none;">
            <i class="fa fa-plus fa-sharp fa-2xs my-float" style="color: rgb(255,255,255);"></i>
        </button>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/adminpanel.js"></script>
    <script src="/assets/js/bold-and-bright.js"></script>
</body>

</html>